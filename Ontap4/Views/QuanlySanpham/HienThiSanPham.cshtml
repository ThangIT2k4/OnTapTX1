
@{
    ViewBag.Title = "HienThiSanPham";
}

<style>
    tr, th, td {
        border: 1px solid #000;
    }

    th, td {
        padding: 7px 15px;
    }
</style>

<div style="margin-bottom: 30px">
    <h2>Danh sách sản phẩm có giá tiền > 100</h2>
    <table>
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng </th>
                <th>Giá tiền </th>
                <th>Giảm giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var sp in ViewBag.list1)
            {
                <tr>
                    <td> @sp.masp </td>
                    <td> @sp.tensanpham </td>
                    <td> @sp.soluong </td>
                    <td> @sp.giatien </td>
                    <td> @sp.giamgia </td>
                    <td> @sp.thanhtien </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h2>Danh sách sản phẩm được giảm giá</h2>
    <table>
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng </th>
                <th>Giá tiền </th>
                <th>Giảm giá</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in ViewBag.list2)
            {
                <tr>
                    <td> @sp.masp </td>
                    <td> @sp.tensanpham </td>
                    <td> @sp.soluong </td>
                    <td> @sp.giatien </td>
                    <td> @sp.giamgia </td>
                    <td> @sp.thanhtien </td>
                </tr>
            }
        </tbody>
    </table>
</div>

