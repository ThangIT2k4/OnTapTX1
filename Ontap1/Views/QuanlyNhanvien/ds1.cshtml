@model IEnumerable<Ontap1.Models.NhanVien>
@{
    ViewBag.Title = "ds1";
}

<style>
    tr, th, td {
        border: 1px solid #000;
    }

    th, td {
        padding: 5px 10px;
    }
</style>

<h2>Danh sách nhân viên có số ngày làm < 20</h2>
<table>
    <thead>
        <tr>
            <th>Mã nhân viên</th>
            <th>Họ tên</th>
            <th>Địa chỉ</th>
            <th>Số ngày làm</th>
            <th>Lương ngày</th>
            <th>Tổng lương</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var nv in Model)
        {
            <tr>
                <td>@nv.manv</td>
                <td>@nv.hoten</td>
                <td>@nv.diachi</td>
                <td>@nv.songaylam</td>
                <td>@nv.luongngay</td>
                <td>@nv.tienluong</td>
            </tr>
        }
    </tbody>
</table>



