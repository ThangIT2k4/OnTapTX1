<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1 style="padding: 10px 20px; background: #00a2e8; color: #fff; font-family: Calibri; text-align: center; font-size: 60px; line-height: 60px">Kiểm tra 1</h1>
    <nav>
        <ul style="font-family: Calibri; display: flex; justify-content: center; gap: 30px; background: #99d9ea; list-style: none">
            <li>@Html.ActionLink("Hiển thị ds1", "ds1", "QuanlyNhanvien", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Hiển thị ds2", "ds2", "QuanlyNhanvien", new { area = "" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Nhập dữ liệu", "Input", "QuanlyNhanvien", new { area = "" }, new { @class = "nav-link" })</li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
