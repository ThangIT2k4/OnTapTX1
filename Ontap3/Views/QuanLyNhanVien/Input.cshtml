
@{
    ViewBag.Title = "Input";
}
<style>
    .form__group {
        margin-bottom: 15px;
    }
    .form__label {
        display: block;
        margin-bottom: 5px;
    }
</style>

<h2>Tạo nhân viên mới</h2>
<form action="CreateUser" method="post" enctype="multipart/form-data">
    <div class="form__group">
        <label class="form__label" for="manv">Mã nhân viên</label>
        <input type="text" id="manv" name="manv" class="form-control" />
    </div>
    <div class="form__group">
        <label for="hoten" class="form__label">Họ tên</label>
        <input type="text" id="hoten" name="hoten" class="form-control" />
    </div>
    <div class="form__group">
        <label class="form__label" >Địa chỉ</label>
        <select name="diachi" class="form-select mb-3">
            <option value="Hà Nội">Hà Nội</option>
            <option value="Hải Phòng">Hải Phòng</option>
            <option value="Quảng Ninh">Quảng Ninh</option>
        </select>
    </div>
    <div class="form__group">
        <label for="songaylam" class="form__label">Số ngày làm</label>
        <input type="text" id="songaylam" name="songaylam" class="form-control" />
    </div>
    <div class="form__group">
        <label for="luongngay" class="form__label">Lương ngày</label>
        <input type="text" id="luongngay" name="luongngay" class="form-control" />
    </div>
    <div class="form__group">
        <label for="file" class="form-label">Thêm file</label>
        <input type="file" id="file" name="file" class="form-control" onchange="createImgLink(event)"/>
        <div style="width: auto; height: 100px; object-fit: cover" id="preview">
            <img src="" alt="preview image" style="width: 100%; height: 100%"/>
        </div>
    </div>
    <div class="form__group">
        <button type="submit" class="btn btn-primary">Tạo nhân viên</button>
    </div>
</form>

<script>
    function createImgLink(e) {
        const preview = document.querySelector('img');
        if (e) {
            preview.src = URL.createObjectURL(e.target.files[0]);
            console.log(e.target.files[0]);
        }
    }
</script>